FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 5002

# Táº¡o script Ä‘á»ƒ cháº¡y migrations vÃ  khá»Ÿi Ä‘á»™ng server
RUN echo '#!/bin/bash\n\
    echo "ðŸ”„ Waiting for database..."\n\
    sleep 10\n\
    echo "ðŸ”„ Running migrations..."\n\
    python manage.py makemigrations\n\
    python manage.py migrate\n\
    echo "ðŸš€ Starting server..."\n\
    exec python manage.py runserver 0.0.0.0:5002' > /start.sh && chmod +x /start.sh

CMD ["/start.sh"]
